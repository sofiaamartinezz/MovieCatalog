@model MovieCatalog.Models.LoginDTO
@namespace MovieCatalog.Views.Account
@{
    ViewData["Title"] = "Login - Movie Catalog";
}

<div class="login-container">
    <div class="login-box">
        <h2 class="text-center mb-4">Welcome Back</h2>
        <form method="post" class="login-form">
            <div class="form-group mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            </div>

            <button type="submit" class="btn btn-primary btn-block btn-get-started w-100">
                Log In
            </button>

            <div class="text-center mt-3">
                <p class="text-muted">
                    Don't have an account? <a href="/Account/Register">Sign up</a>
                </p>
            </div>
        </form>
    </div>
</div>