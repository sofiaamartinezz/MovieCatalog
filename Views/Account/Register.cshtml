@model MovieCatalog.Models.RegisterDTO
@namespace MovieCatalog.Views.Account
@{
    ViewData["Title"] = "Join Movie Catalog";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="login-container">
    <div class="login-box register-box">
        <h2 class="text-center mb-4">Create Your Account</h2>
        <p class="text-center text-muted mb-4">Join our community of movie enthusiasts</p>
        
        <form asp-action="Register" asp-controller="Account" asp-route-returnUrl="@returnUrl" method="post" class="login-form">
            <div class="form-group mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger validation-message"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger validation-message"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Confirm Password</label>
                <input asp-for="Password2" type="password" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="Password2" class="text-danger validation-message"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block btn-get-started w-100">
                Create Account
            </button>

            <div class="text-center mt-3">
                <p class="text-muted">
                    Already have an account? <a href="/Account/Login">Log in</a>
                </p>
            </div>
        </form>
    </div>
</div>