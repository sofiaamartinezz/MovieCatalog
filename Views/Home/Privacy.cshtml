@model IEnumerable<MovieCatalog.Models.Movie>

<h2>Movies List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Genre</td>
            <td>@item.Director</td>
            <td>@item.Rating</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovieId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.MovieId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-controller="Movies" asp-action="Create" class="btn btn-primary">Add New Movie</a>
